<!-- include header template -->
<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
           <label>Title</label>
           <input type="text" name="blog[title]" placeholder="Blog Title"> 
        </div>
        
        <div class="field">
           <label>Image</label>
           <input type="text" name="blog[image]" placeholder="Image">
        </div>
        
        <div class="field">
           <label>Blog Content</label>
           <textarea name="blog[description]" required></textarea>
        </div>
        <button class="ui secondary big basic button">Add Post</button>
    </form>
</div>

