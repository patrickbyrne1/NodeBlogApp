<!-- include header template -->
<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= results[0].title %></div>
    <form class="ui form" action="/blogs/<%= results[0].postId%>" method="POST">
        <div class="field">
           <label>Title</label>
           <input type="text" name="blog[title]" placeholder="Blog Title" value="<%= results[0].title %>"> 
        </div>
        
        <div class="field">
           <label>Image</label>
           <input type="text" name="blog[image]" placeholder="Image" value="<%= results[0].image %>">
        </div>
        
        <div class="field">
           <label>Blog Content</label>
           <textarea name="blog[description]" required><%= results[0].body %></textarea>
        </div>
        <button class="ui secondary big basic button">Update Post</button>
        <input type="hidden" name="id" value="<%= results[0].postId %>">
    </form>
</div>

<!-- include footer template -->
<% include ./partials/footer %>